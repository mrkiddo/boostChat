<div class="contact-list">
    <div class="head-wrapper">
        <div class="user-avatar">
            <img v-bind:src="userInfo.avatar | avatarPath" class="user-avatar-img" alt="avatar">
        </div>
        <div class="user-name">\{{userInfo.name}}</div>
        <div class="user-setting" v-on:click="signOut()" title="Sign Out"></div>
    </div>
    <div class="list-wrapper">
        <ul>
            <li v-for="contact in cont">
                <div class="list-item" v-bind:class="{active: $index == selectedIndex}"
                     v-on:click.stop.prevent="select(contact.id, $index, contact)">
                    <div class="contact-img">
                        <img v-bind:src="contact.avatar | avatarPath" alt="avatar">
                    </div>
                    <div class="contact-name">
                        <div class="contact-name-content">\{{contact.name}}</div>
                    </div>
                    <div class="contact-control">
                        <button class="sticky-button" v-bind:class="{active: contact.isSticky == true}"
                                v-on:click.stop.prevent="updateSticky(contact.id, $index)"></button>
                    </div>
                </div>
            </li>
        </ul>
    </div>
</div>